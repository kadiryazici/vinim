{
   "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "declarationDir": "dist/types",
      "declaration": true,
      "resolveJsonModule": true,
      "strictFunctionTypes": false,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "paths": {
         "/*": ["./*"]
      }
   },
   "exclude": ["node_modules"],
   "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "frontend/App.tsx"
   ]
}
